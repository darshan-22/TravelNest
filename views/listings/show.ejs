<% layout('/layouts/boilerplate') -%>
<div class="row justify-content-center">
  <div class="col-lg-8 col-md-10">
    <h2 class="mb-4">Listing Details</h2>
    <div class="card mb-4">
      <img
        src="<%= listing.image %>"
        class="card-img-top"
        alt="listing_image"
      />
      <div class="card-body">
        <h5 class="card-title mb-3 mt-2">
          <i
            ><u><b><%= listing.title %></b></u></i
          >
        </h5>
        <p class="card-text mb-1">
          <strong>Description: </strong> <%= listing.description %>
        </p>
        <p class="card-text mb-1">
          <strong>Price: </strong> &#8377; <%=
          listing.price.toLocaleString("en-IN") %>
        </p>
        <p class="card-text mb-1">
          <strong>Location: </strong><%= listing.location %>
        </p>
        <p class="card-text mb-1">
          <strong>Country: </strong><%= listing.country %>
        </p>
      </div>
    </div>

    <div class="d-flex justify-content-between">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary mb-3"
        >Edit this listing!</a
      >
      <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <button type="submit" class="btn btn-danger mb-3">
          Delete this listing
        </button>
      </form>
    </div>
  </div>
</div>

