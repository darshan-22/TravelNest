<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <h3><i>Create a new listing!</i></h3>
    <hr />
    <form method="POST" action="/listings">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          type="text"
          class="form-control"
          placeholder="What's your place called?"
        />
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          class="form-control"
          placeholder="Describe the unique features and amenities"
          rows="3"
        ></textarea>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        <input
          name="listing[image]"
          type="text"
          class="form-control"
          placeholder="Give us a link to view your place"
        />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            type="number"
            class="form-control"
            placeholder="Set the nightly rate in INR"
          />
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            type="text"
            class="form-control"
            placeholder="Which country is the place located?"
          />
        </div>
      </div>
      <div class="mb-3">
        <label for="title" class="form-label">Location</label>
        <input
          name="listing[location]"
          type="text"
          class="form-control"
          placeholder="A more precise location of your place!"
        />
      </div>
      <button class="btn btn-dark">List My Place!</button> <br />
      <br />
    </form>
  </div>
</div>
